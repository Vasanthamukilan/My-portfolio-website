<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>URL Shortener</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background: linear-gradient(135deg, #1F1C2C, #928DAB);
      color: white;
      margin: 0;
      padding: 0;
      text-align: center;
    }

    .navbar {
      background: rgba(0, 0, 0, 0.4);
      padding: 15px;
      backdrop-filter: blur(10px);
    }
    
    .navbar-brand, .nav-link {
      font-weight: 600;
      font-size: 1.2em;
      transition: 0.3s;
    }

    .nav-link {
      color: #f8d210 !important;
      margin-right: 15px;
    }

    .nav-link:hover {
      color: #ff2d75 !important;
      text-shadow: 0px 0px 5px rgba(255, 45, 117, 0.8);
    }

    .hero {
      margin-top: 60px;
      margin-bottom: 40px;
    }

    .result-box {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      border-radius: 15px;
      padding: 20px;
      max-width: 800px;
      margin: 20px auto;
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
      border: 1px solid rgba(255, 255, 255, 0.3);
    }

    .label {
      font-weight: 600;
      color: #ffeb3b;
    }

    .url {
      word-break: break-word;
      display: inline-block;
    }

    .icons {
      display: flex;
      gap: 15px;
      justify-content: center;
      align-items: center;
      margin-left: auto;
    }

    .icon {
      color: #00eaff;
      cursor: pointer;
      font-size: 1.5rem;
      transition: 0.3s ease-in-out;
    }

    .icon:hover {
      transform: scale(1.2);
      color: #ff2d75;
      text-shadow: 0px 0px 8px rgba(255, 45, 117, 0.8);
    }

    .qr-container {
      text-align: center;
      display: none;
      margin-top: 10px;
    }

    .qr-close {
      cursor: pointer;
      color: red;
      font-size: 1.5rem;
      margin-top: 5px;
    }

    .btn-primary {
      background: linear-gradient(135deg, #ff416c, #ff4b2b);
      border: none;
      padding: 10px 20px;
      font-size: 1.1em;
      border-radius: 10px;
      transition: 0.3s ease-in-out;
    }

    .btn-primary:hover {
      background: linear-gradient(135deg, #ff4b2b, #ff416c);
      box-shadow: 0px 0px 10px rgba(255, 45, 117, 0.8);
    }

    .form-control {
      border-radius: 10px;
      border: 2px solid #ffeb3b;
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg">
    <div class="container">
      <a class="nav-link" href="/">Home</a>
      <div class="collapse navbar-collapse justify-content-end">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/about">About</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container text-center hero">
    <h1 style="text-shadow: 2px 2px 10px rgba(255, 255, 255, 0.3);">ðŸ”¥ URL Shortener ðŸ”¥</h1>
    <p>Shorten your links instantly</p>
  </div>

  <div class="container d-flex justify-content-center mb-4">
    <form action="/shortUrls" method="POST" class="d-flex">
      <input required placeholder="Enter link here" type="url" name="fullUrl" id="fullUrl" class="form-control me-2" style="width: 400px; padding: 10px;">
      <button class="btn btn-primary">Shorten URL</button>
    </form>
  </div>

  <% if (newShort) { %>
    <div class="result-box">
      <div class="row align-items-center">
        <div class="col-md-7">
          <div class="label">Original URL:</div>
          <div class="url"><%= newShort.full %></div>
        </div>
        <div class="col-md-5 d-flex align-items-center justify-content-end">
          <div>
            <div class="label">Shortened URL:</div>
            <div class="url" id="shortUrlDisplay"><%= baseUrl %>/<%= newShort.short %></div>
          </div>
          <div class="icons">
            <i class="fas fa-qrcode icon" onclick="showQRCode('<%= newShort.short %>')"></i>
            <i class="fas fa-copy icon" onclick="copyToClipboard('<%= newShort.short %>')"></i>
            <i class="fas fa-times icon" onclick="closeResult()"></i>
          </div>
        </div>
      </div>
    </div>

    <div id="qrContainer" class="qr-container">
      <img id="qrInlineImage" src="" alt="QR Code">
      <div class="qr-close" onclick="closeQR()">Ã—</div>
    </div>
  <% } %>

  <script>
    const baseUrl = window.location.origin;

    function copyToClipboard(shortUrl) {
      const url = baseUrl + '/' + shortUrl;
      navigator.clipboard.writeText(url).then(() => {
        alert('Copied to clipboard!');
      }).catch(err => {
        console.error(err);
      });
    }

    function showQRCode(shortUrl) {
      fetch('/generate-qr/' + shortUrl)
        .then(response => response.text())
        .then(data => {
          document.getElementById('qrInlineImage').src = data;
          document.getElementById('qrContainer').style.display = 'block';
        })
        .catch(error => {
          alert('Error generating QR code');
          console.error(error);
        });
    }

    function closeQR() {
      document.getElementById('qrContainer').style.display = 'none';
    }

    function closeResult() {
      document.querySelector('.result-box').style.display = 'none';
      document.getElementById('qrContainer').style.display = 'none';
    }
  </script>
</body>
</html>
